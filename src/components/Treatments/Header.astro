---
const { bg, heading } = Astro.props;
---

<header
  class="header"
  style={` background-image:linear-gradient(to bottom, rgba(0,0,0,.2), rgba(0,0,0,.2 )), url('${bg}')`}
>
  <div class="header__container">
    <h1 class="header__heading">{heading}</h1>
  </div>
</header>

<style lang="scss">
  .header {
    padding: 15rem;
    background-size: cover;

    @media (max-width: 900px) {
      padding: 10rem;
    }

    @media (max-width: 600px) {
      padding: 7.5rem;
    }

    @media (max-width: 450px) {
      padding: 5rem 2rem;
    }

    &__heading {
      font-family: var(--font-heading);
      font-size: 5rem;
      color: var(--color-white);
      text-shadow: var(--header-text-shadow);
      text-align: center;
      text-transform: uppercase;

      @media (max-width: 600px) {
        font-size: 3rem;
      }
    }
  }
</style>
