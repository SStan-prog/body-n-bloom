---
const { text, href, blank } = Astro.props;
---

<a href={href} class="btn" target={`${blank ? '_blank' : ''}`}>
  {text}
</a>

<style>
  .btn {
    background-color: var(--color-blue);
    color: var(--color-white);
    font-weight: bold;
    text-transform: uppercase;
    text-align: center;
    padding: 1.5rem 3rem;
    border-radius: 999px;

    width: min-content;
    white-space: nowrap;

    text-decoration: none;
    font-size: 18px;
  }
</style>
