---
const { bg, heading } = Astro.props;
---

<header
  class="header"
  style={` background-image:linear-gradient(to bottom, rgba(0,0,0,.2), rgba(0,0,0,.2 )), url('../../images/common-header.jpg')`}
>
  <div class="header__container">
    <h1 class="header__heading">Thank You</h1>
    <h2 class="header__subheading">
      We will get back to you as soon as possible.
    </h2>
  </div>
</header>

<style lang="scss">
  .header {
    padding: 15rem;
    background-size: cover;

    @media (max-width: 900px) {
      padding: 10rem;
    }

    @media (max-width: 600px) {
      padding: 7.5rem;
    }

    @media (max-width: 450px) {
      padding: 5rem 2rem;
    }

    &__heading {
      font-family: var(--font-heading);
      font-size: 5rem;
      color: var(--color-white);
      text-shadow: var(--header-text-shadow);
      text-align: center;

      margin-bottom: 2rem;

      @media (max-width: 600px) {
        font-size: 3rem;
      }
    }

    &__subheading {
      font-size: 4rem;
      color: var(--color-white);
      text-shadow: var(--header-text-shadow);
      text-align: center;

      @media (max-width: 600px) {
        font-size: 2rem;
      }
    }
  }
</style>
