---
import NavTop from '../components/Layout/NavTop.astro';
import Navbar from '../components/Layout/Navbar.svelte';
import Footer from '../components/Layout/Footer.astro';

import '@fontsource/dm-serif-display';
import '@fontsource/dm-sans';
import '@fontsource/dm-sans/700.css';

export interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;

const descriptionTrimmed = description
  ? description.slice(3, 150).concat('...')
  : ' ';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={descriptionTrimmed} />
    <title>{title} | Body 'N' Bloom</title>
  </head>
  <body style="background: url('/images/body-bg.jpeg') repeat;">
    <div class="white-wrapper">
      <NavTop />
      <Navbar client:load />
      <slot />
      <Footer />
    </div>
  </body>
</html>

<style is:global lang="scss">
  *,
  *::after,
  *::before {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-size: 62.5%;
    height: 100%;
    margin: 0 auto;
  }

  body {
    line-height: 1.5;

    background-attachment: fixed !important;
  }

  .white-wrapper {
    background: rgba(255, 255, 255, 0.69);
  }

  :root {
    //colors
    --color-white: #fff;
    --color-off-white: #e1e1e1;
    --color-black: #535353;

    --color-light-grey: #fcfcfc;

    --color-blue: #4051b5;
    --color-blue-light: #7c8bda;
    --color-blue-dark: hsl(231, 48%, 40%);

    --color-green: #7dbd4a;
    --color-green-dark: #138001;

    //font size
    --font-size-body: 16px;

    //font family
    --font-heading: 'DM Serif Display', serif;
    //font family
    --font-heading: 'DM Serif Display', serif;

    //text shadow
    --header-text-shadow: 2px 2px #2b2b2ba9;

    //box shadow
    --shadow-sm: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  }

  body {
    color: var(--color-black);
    font-size: var(--font-size-body);
    font-family: 'DM Sans', sans-serif;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: var(--font-heading);
  }

  a {
    color: var(--color-blue);
    font-weight: bold;
    text-decoration: none;

    transition: color 0.3s ease;

    &:hover {
      color: var(--color-blue-dark);
    }
  }

  p {
    font-size: 1.8rem;
    margin-bottom: 2rem;

    @media (max-width: 600px) {
      font-size: 1.6rem;
    }

    & ul {
      & li {
        margin: 1rem 0;
      }
    }
  }

  video,
  iframe {
    aspect-ratio: 16/9;
    width: 100%;
    height: auto;
  }
</style>
